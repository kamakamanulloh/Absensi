<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    app:behavior_hideable="true"
    app:behavior_peekHeight="56dp"
    android:orientation="vertical"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

 <Button
     android:id="@+id/btnDatang"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:text="Datang"
     android:drawableLeft="@drawable/ic_come_in"
     android:layout_margin="@dimen/activity_horizontal_margin"
     android:background="@drawable/button_absensi"/>

    <View
        android:id="@+id/facebookView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bdbdbd"
        app:layout_constraintTop_toBottomOf="@id/btnDatang" />


    <Button
        android:id="@+id/btnPulag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pulang"
        android:drawableLeft="@drawable/ic_exit_door_symbol"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@drawable/button_absensi"/>


</LinearLayout>